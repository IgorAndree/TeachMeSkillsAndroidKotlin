<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context=".FeedFragment">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:entries="@array/for_spinner" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:entries="@array/for_list" />

    <Button
        android:id="@+id/button_feed_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/my_color_button_next"
        android:text="@string/button_feed_text"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button_feed_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/my_color_button_back"
        android:text="@string/button_feed_and_recycler_text"
        android:textColor="@color/white" />
</LinearLayout>